{
  "compilerOptions": {
    "target": "ES2021",
    "sourceMap": true,
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "@lib/*": ["lib/*"],
      "@consts/*": ["consts/*"],
      "@protos/*": ["protos/*"],
      "@usecases/*": ["usecases/*"],
      "@services/*": ["services/*"],
      "@external/*": ["services/external/*"],
      "@validations/*": ["validatiosSchema/*"],
      "@providers/*": ["providers/*"],
      "@controllers/*": ["controllers/*"],
      "@decorators/*": ["decorators/*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"]
    },
    "types": ["@types/node"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src", 
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
